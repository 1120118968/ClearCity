<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clearcity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.clearcity.InitActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_init"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.clearcity.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.clearcity.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.example.clearcity.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.clearcity.ItemListActivity" />
        </activity>
        <activity
            android:name="com.example.clearcity.SliderActivity"
            android:label="@string/title_activity_slider"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.clearcity.BasicActivity"
            android:label="@string/title_activity_basic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.clearcity.BottomActivity"
            android:label="@string/title_activity_bottom" />
        <activity
            android:name="com.example.clearcity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.clearcity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.clearcity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.example.clearcity.ui.login.LoginActivity"
            android:label="@string/app_name">

        </activity>
    </application>

</manifest>